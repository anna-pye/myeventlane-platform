/**
 * Implements hook_entity_insert().
 */
function myeventlane_vendor_entity_insert(EntityInterface $entity): void {
  if ($entity instanceof Vendor) {
    \Drupal::service('myeventlane_vendor.vendor_store_subscriber')
      ->onVendorInsertFromHook($entity);
  }
}

/**
 * Implements hook_form_alter().
 *
 * IMPORTANT:
 * - NEVER touch login, register, or password forms.
 * - NEVER override #action globally.
 */
function myeventlane_vendor_form_alter(
  array &$form,
  FormStateInterface $form_state,
  string $form_id,
): void {

  // ğŸš« Absolutely never alter authentication forms.
  if (in_array($form_id, [
    'user_login_form',
    'user_login_block_form',
    'user_register_form',
    'user_pass',
    'user_pass_reset',
  ], TRUE)) {
    return;
  }

  // Onboarding profile step uses dedicated VendorOnboardProfileForm (not entity form).
  // Only vendor-domain cosmetic/UX changes are allowed for vendor entity forms.
  if (!\Drupal::service('myeventlane_core.domain_detector')->isVendorDomain()) {
    return;
  }
}

/**
 * Implements hook_form_user_login_form_alter().
 *
 * Contextual login UI: vendor intent gets organiser copy and CTAs.
 * Uses VendorIntentResolver for intent detection.
 */
function myeventlane_vendor_form_user_login_form_alter(
  array &$form,
  FormStateInterface $form_state,
): void {
  $is_vendor_intent = \Drupal::hasService('myeventlane_core.vendor_intent_resolver')
    ? \Drupal::service('myeventlane_core.vendor_intent_resolver')->isVendorIntent()
    : _myeventlane_vendor_is_vendor_intent();

  // Pass contextual data to template via form (preprocess copies to variables).
  $form['#mel_vendor_intent'] = $is_vendor_intent;
  if ($is_vendor_intent) {
    $form['#mel_auth_headline'] = t('Log in to create your event');
    $form['#mel_auth_subcopy'] = t("You'll need an organiser account");
    $form['#mel_auth_signup_url'] = Url::fromRoute('myeventlane_vendor.onboard.account')->toString();
    $form['#mel_auth_signup_text'] = t('Create organiser account');
    $form['#attributes']['class'][] = 'mel-auth--vendor-intent';
    if (isset($form['actions']['submit']['#value'])) {
      $form['actions']['submit']['#value'] = t('Log in');
    }
  }
  else {
    $form['#mel_auth_headline'] = t('Log in');
    $form['#mel_auth_subcopy'] = t('Log in to your account');
    $form['#mel_auth_signup_url'] = Url::fromRoute('user.register')->toString();
    $form['#mel_auth_signup_text'] = t('Sign up');
  }
}

/**
 * Implements hook_preprocess_form() for user_login_form.
 *
 * Passes contextual auth variables and form element to form template.
 */
function myeventlane_vendor_preprocess_form(array &$variables): void {
  $element = $variables['element'] ?? [];
  if (($element['#form_id'] ?? '') !== 'user_login_form') {
    return;
  }

  $variables['form'] = $element;
  $variables['mel_vendor_intent'] = $element['#mel_vendor_intent'] ?? FALSE;
  $variables['mel_auth_headline'] = $element['#mel_auth_headline'] ?? t('Log in');
  $variables['mel_auth_subcopy'] = $element['#mel_auth_subcopy'] ?? t('Log in to your account');
  $variables['mel_auth_signup_url'] = $element['#mel_auth_signup_url'] ?? '';
  $variables['mel_auth_signup_text'] = $element['#mel_auth_signup_text'] ?? t('Sign up');
}

/**
 * Fallback vendor intent detection when VendorIntentResolver service unavailable.
 *
 * Replicates VendorIntentResolver::isVendorIntent() logic.
 */
function _myeventlane_vendor_is_vendor_intent(): bool {
  $request = \Drupal::request();
  if ($request === NULL) {
    return FALSE;
  }
  if ($request->query->get('intent') === 'vendor') {
    return TRUE;
  }
  $destination = $request->query->get('destination');
  if ($destination === NULL || $destination === '') {
    return FALSE;
  }
  $path = str_contains($destination, '?')
    ? strstr($destination, '?', TRUE)
    : $destination;
  $path = '/' . trim($path, '/');
  return str_starts_with($path, '/vendor') || $path === '/create-event';
}

/**
 * Implements hook_form_user_register_form_alter().
 */
function myeventlane_vendor_form_user_register_form_alter(
  array &$form,
  FormStateInterface $form_state,
): void {
  $is_vendor = \Drupal::request()->query->get('vendor') === '1';
  $form_state->set('is_vendor_registration', $is_vendor);

  if ($is_vendor && isset($form['actions']['submit'])) {
    $form['actions']['submit']['#submit'][] =
      '_myeventlane_vendor_redirect_to_onboard';
  }
}

/**
 * Redirect vendor registrations to onboarding.
 */
function _myeventlane_vendor_redirect_to_onboard(
  array $form,
  FormStateInterface $form_state,
): void {
  if ($form_state->get('is_vendor_registration')) {
    $form_state->setRedirect('myeventlane_vendor.onboard.profile');
  }
}

/**
 * Helper: Get vendor IDs associated with a user.
 */
function _myeventlane_vendor_get_user_vendors(int $uid): array {
  $storage = \Drupal::entityTypeManager()->getStorage('myeventlane_vendor');

  $ids = array_merge(
    $storage->getQuery()->condition('uid', $uid)->execute() ?: [],
    $storage->getQuery()->condition('field_vendor_users', $uid)->execute() ?: []
  );

  return array_values(array_unique(array_map('intval', $ids)));
}

/**
 * Implements hook_page_attachments_alter().
 */
function myeventlane_vendor_page_attachments_alter(array &$attachments): void {
  $route = \Drupal::routeMatch()->getRouteName();

  if ($route && str_starts_with($route, 'myeventlane_vendor.')) {
    $attachments['#attached']['library'][] =
      'myeventlane_vendor/hide_admin_sidebar';
  }
}

/**
 * Submit handler: publish event.
 */
function _myeventlane_vendor_publish_event(
  array &$form,
  FormStateInterface $form_state,
): void {
  $entity = $form_state->getFormObject()->getEntity();

  if ($entity instanceof NodeInterface) {
    $entity->setPublished();
    \Drupal::messenger()->addStatus(t('Event published.'));
    $form_state->setRedirect('myeventlane_vendor.console.events');
  }
}

/**
 * Submit handler: save draft.
 */
function _myeventlane_vendor_save_draft(
  array &$form,
  FormStateInterface $form_state,
): void {
  $entity = $form_state->getFormObject()->getEntity();

  if ($entity instanceof NodeInterface) {
    $entity->setUnpublished();
    \Drupal::messenger()->addStatus(t('Draft saved.'));
    $form_state->setRedirect('myeventlane_vendor.console.events');
  }
}
