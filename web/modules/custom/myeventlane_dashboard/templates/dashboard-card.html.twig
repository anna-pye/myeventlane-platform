{#
/**
 * @file
 * Template for a dashboard card component.
 *
 * Available variables:
 * - title: Card title.
 * - value: Numeric value to display.
 * - description: Optional description text.
 * - link_url: Optional URL for a link.
 * - link_text: Text for the link.
 * - icon: Optional icon identifier.
 * - attributes: HTML attributes for the wrapper element.
 */
#}
<div{{ attributes.addClass('mel-card', icon ? 'mel-card--' ~ icon) }}>
  {% if title %}
    <div class="mel-card-title-wrapper" style="display: flex; align-items: center; gap: 0.5rem;">
      <h3 class="mel-card-title">{{ title }}</h3>
      {% if provenance %}
        <button
          type="button"
          class="mel-tooltip-trigger"
          aria-label="How this metric is calculated"
          title="{{ provenance|e }}"
          style="width: 20px; height: 20px; border-radius: 50%; border: 1px solid currentColor; background: transparent; color: inherit; cursor: help; font-size: 0.75rem; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
          ?
        </button>
      {% endif %}
    </div>
  {% endif %}

  {% if value is not null %}
    <div class="mel-card-value">{{ value }}</div>
  {% endif %}

  {% if description %}
    <p class="mel-card-description">{{ description }}</p>
  {% endif %}

  {% if link_url and link_text %}
    <a href="{{ link_url }}" class="mel-btn">{{ link_text }}</a>
  {% endif %}
</div>
