{#
  Waitlist Promotion Email (inner-body-only)
  Wrapper provided by Mime Mail theme override (mimemail-message.html.twig)
  Variables: event, attendee, event_title, event_start, event_url, purchase_url, attendee_name
#}

<p style="margin: 0 0 12px 0;">
  Hi {{ attendee_name|default(attendee.display_name|default('there')) }},
</p>

<p style="margin: 0 0 16px 0;">
  A spot has opened up for:
</p>

<div style="font-weight: 700; font-size: 16px; line-height: 1.2; margin: 0 0 6px 0;">
  {% if event_url is defined and event_url %}
    <a href="{{ event_url }}" style="color:#2c3e50; text-decoration:none;">
      {{ event_title|default(event.label|default('Event')) }}
    </a>
  {% else %}
    {{ event_title|default(event.label|default('Event')) }}
  {% endif %}
</div>

{% if event_start is defined and event_start %}
  <div style="font-size: 14px; opacity: 0.9; margin: 0 0 2px 0;">
    {{ event_start }}
  </div>
{% endif %}

{% if event_location is defined and event_location %}
  <div style="font-size: 14px; opacity: 0.85; margin: 0 0 12px 0;">
    {{ event_location }}
  </div>
{% endif %}

{% if purchase_url is defined and purchase_url %}
  <div style="margin: 16px 0;">
    <a href="{{ purchase_url }}" style="display:inline-block; background:#f26d5b; color:#ffffff; text-decoration:none; padding: 10px 14px; border-radius: 999px; font-weight: 700; font-size: 14px;">
      Claim your spot
    </a>
  </div>
{% endif %}

<p style="margin: 0; font-size: 12px; opacity: 0.85;">
  If you no longer want this spot, you can ignore this email.
</p>
