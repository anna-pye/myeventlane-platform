<div class="mel-rsvp-dashboard">
  <h1>{{ event_title }}</h1>

  <div class="mel-stats">
    <div>Confirmed: <strong>{{ confirmed }}</strong></div>
    <div>Waitlist: <strong>{{ waitlist }}</strong></div>
    <a href="{{ csv_url }}" class="mel-btn mel-btn-small">Download CSV</a>
  </div>

  <table class="mel-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <td>{{ item.name }}</td>
          <td>{{ item.email }}</td>
          <td>{{ item.status }}</td>
          <td>{{ item.created }}</td>
          <td>
            <a href="{{ item.actions.cancel.toString() }}">Cancel</a>
            {% if item.status == 'waitlist' %}
              | <a href="{{ item.actions.promote.toString() }}">Promote</a>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>