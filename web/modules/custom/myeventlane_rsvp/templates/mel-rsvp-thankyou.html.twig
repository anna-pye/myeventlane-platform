<div class="mel-rsvp-thankyou">
  {% if title %}
    <h1 class="mel-rsvp-thankyou__title">{{ title }}</h1>
  {% endif %}

  {% if message %}
    <p class="mel-rsvp-thankyou__message">{{ message }}</p>
  {% endif %}

  {% if event_title %}
    <p class="mel-rsvp-thankyou__event">
      Event: <strong>{{ event_title }}</strong>
      {% if event_link %}
        <span class="mel-rsvp-thankyou__event-link">({{ event_link }})</span>
      {% endif %}
    </p>
  {% endif %}

  {% if donation_enabled %}
    <div class="mel-rsvp-thankyou__donation">
      <p>You can optionally add a donation on the next step.</p>
    </div>
  {% endif %}
</div>
