{% if preheader %}
  <div style="display:none;max-height:0;overflow:hidden;opacity:0;mso-hide:all;">
    {{ preheader }}
  </div>
{% endif %}
<table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="background:#fef5ec;padding:24px;font-family:'Nunito',Arial,sans-serif;color:#293241;" data-mel-wrapper="1">
  <tr>
    <td align="center">
      <table role="presentation" width="600" cellpadding="0" cellspacing="0" style="background:#ffffff;border-radius:16px;box-shadow:0 2px 12px rgba(0,0,0,0.06);overflow:hidden;">
{% if logo_path %}
        <tr>
          <td style="padding: 18px 24px 8px 24px; text-align: left;">
            <img src="{{ logo_path }}" alt="MyEventLane" width="140" style="display:block; height:auto; border:0; outline:none; text-decoration:none;" />
          </td>
        </tr>
{% endif %}
        <tr>
          <td style="padding:16px 20px;border-bottom:1px solid #f4f4f4;">
            <div style="font-weight:700;font-size:16px;color:#293241;">{{ context.from_name|default('MyEventLane') }}</div>
          </td>
        </tr>
        <tr>
          <td style="padding:24px;font-size:16px;line-height:1.6;">
            {# Body is already rendered as a Twig string by MessageRenderer. #}
            {% set body_html = body is iterable ? body|join('') : body %}
            {{ body_html|default('')|raw }}
          </td>
        </tr>
{% if marketing.promo_title or marketing.promo_body %}
        <tr>
          <td style="padding:16px 24px;border-top:1px solid #f4f4f4;">
            <div class="mel-marketing-block">
              <strong>{{ marketing.promo_title }}</strong>
              <p>{{ marketing.promo_body }}</p>
              {% if marketing.promo_url %}
                <a href="{{ marketing.promo_url }}">{{ marketing.promo_button|default('Learn more') }}</a>
              {% endif %}
            </div>
          </td>
        </tr>
{% endif %}
        <tr>
          <td style="padding:12px 20px;border-top:1px solid #f4f4f4;font-size:12px;color:#888;">
            {{ context.footer_text|default("You're receiving this because you interacted with MyEventLane.") }}{% if context.unsubscribe_url %} <a href="{{ context.unsubscribe_url }}" style="color:#6e7ef2;">Unsubscribe</a>{% endif %}
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
