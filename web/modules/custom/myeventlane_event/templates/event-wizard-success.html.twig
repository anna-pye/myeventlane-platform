{#
/**
 * @file
 * Template for post-publish success screen.
 *
 * MEL Design: celebratory, calm, clear next steps.
 *
 * Variables:
 * - title: Page title
 * - event: Event node (published)
 * - event_url: URL to view the event
 * - tickets_url: URL to manage tickets
 * - create_url: URL to create another event
 */
#}
<div class="mel-event-wizard-success">
  <div class="mel-event-wizard-success__container">
    <div class="mel-event-wizard-success__content">
      <h1 class="mel-event-wizard-success__title">{{ 'Your event is live ðŸŽ‰'|t }}</h1>

      <p class="mel-event-wizard-success__description">
        {{ '"@title" is now published and visible to attendees. You can share it now, or head back to your dashboard â€” everything can be edited anytime.'|t({'@title': event.label()}) }}
      </p>

      <div class="mel-event-wizard-success__actions" role="group" aria-label="{{ 'Next actions'|t }}">
        <a href="{{ event_url }}" class="mel-btn mel-btn--primary mel-btn--large" target="_blank" rel="noopener noreferrer">
          {{ 'View your event'|t }}
        </a>

        {% set dashboard_url_safe = dashboard_url|default('') %}
        {% if dashboard_url_safe %}
          <a href="{{ dashboard_url_safe }}" class="mel-btn mel-btn--secondary mel-btn--large">
            {{ 'Go to dashboard'|t }}
          </a>
        {% endif %}
      </div>

      <div class="mel-event-wizard-success__next">
        <h2 class="mel-event-wizard-success__next-title">{{ 'Next steps'|t }}</h2>
        <ul class="mel-event-wizard-success__next-list">
          <li>{{ 'Share your event'|t }}</li>
          <li>{{ 'Check RSVPs / ticket sales'|t }}</li>
          <li>{{ 'Edit details anytime'|t }}</li>
        </ul>
      </div>
    </div>
  </div>
</div>
