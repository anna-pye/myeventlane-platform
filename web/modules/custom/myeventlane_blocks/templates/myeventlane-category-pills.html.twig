{#
/**
 * @file
 * MyEventLane category pills block template - MEL v2 Sticker Wall style.
 *
 * Variables:
 * - categories: Array of items with keys: tid, label, color.
 *
 * Note: Homepage template provides .mel-category-strip wrapper.
 */
#}
{% for c in categories %}
  {% set category_slug = c.label|lower|replace({' ': '-', '&': 'and', '+': ''}) %}
  <a
    href="/events/category/{{ c.tid }}"
    class="mel-pill mel-pill--category mel-cat--{{ category_slug }}"
    style="--pill-color: {{ c.color }}; background: var(--pill-color); color: #fff; position: static; top: auto; left: auto; transform: none; white-space: nowrap;"
  >
    <span class="mel-pill__text">{{ c.label }}</span>
  </a>
{% endfor %}
