{#
/**
 * @file
 * MyEventLane category pills block template - Global MEL Category Pill System.
 *
 * Variables:
 * - categories: Array of items with keys: tid, label, color, slug (added by preprocess).
 *
 * Note: Homepage template provides .mel-category-strip wrapper.
 */
#}
{% for c in categories %}
  {% set pill_mod = c.pill_color|default(c.slug)|default(c.label|lower|replace({' ': '-', '&': 'and', '+': ''}))|trim|lower|default('default') %}
  <a
    href="{{ c.url|default(path('entity.taxonomy_term.canonical', {'taxonomy_term': c.tid})) }}"
    class="mel-category-pill mel-category-pill--{{ pill_mod|clean_class }}"
    aria-label="{{ 'View events in'|t }} {{ c.label }}"
  >
    {{ c.label }}
  </a>
{% endfor %}
