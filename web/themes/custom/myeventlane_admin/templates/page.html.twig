{#
/**
 * @file
 * Page template for MyEventLane Admin theme.
 *
 * Keeps markup minimal and Claro-compatible.
 */
#}

<div class="mel-admin-layout">
  {% if page.header %}
    <header class="mel-admin-header" role="banner">
      {{ page.header }}
    </header>
  {% endif %}

  <main id="main-content" class="mel-admin-content" role="main">
    <div class="mel-admin-layout__grid">
      {% if page.sidebar_first %}
        <aside class="mel-admin-sidebar" role="complementary">
          {{ page.sidebar_first }}
        </aside>
      {% endif %}

      <div class="mel-admin-main">
        {{ page.content }}
      </div>
    </div>
  </main>

  {% if page.footer %}
    <footer class="mel-admin-footer" role="contentinfo">
      {{ page.footer }}
    </footer>
  {% endif %}
</div>

