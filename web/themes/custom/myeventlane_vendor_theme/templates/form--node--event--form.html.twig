{#
/**
 * @file
 * Vendor console override for Event node add/edit form.
 *
 * Important:
 * - Do NOT manually render individual fields here.
 * - The wizard structure is built in PHP (myeventlane_event).
 * - Twig only prints the wizard container + actions + required hidden tokens.
 */
#}

<form{{ attributes.addClass('mel-event-form-page') }}>
  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}

  {# Wizard wrapper created by PHP alter. #}
  {% if form.mel_wizard %}
    {{ form.mel_wizard }}
  {% endif %}

  {% if form.actions %}
    {{ form.actions }}
  {% endif %}

  {# Render any remaining system fields that must be present. #}
  {{ form|without(
    'form_build_id', 'form_token', 'form_id',
    'mel_wizard',
    'wizard_current_step', 'wizard_target_step',
    'actions'
  ) }}
</form>
