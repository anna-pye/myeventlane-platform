{#
/**
 * @component Hero
 * Homepage hero with brand, search, and popular tags.
 *
 * Variables:
 * - popular_tags: array of { name, url }
 */
#}

<section class="hero" aria-labelledby="hero-brand">
  <div class="hero__inner">
    <div class="hero__content">
      <div class="hero__text">
        <h1 id="hero-brand" class="hero__brand">{{ 'My EventLane'|t }}</h1>

        <p class="hero__tagline">{{ 'Your lane to great events'|t }}</p>
        <p class="hero__utility">{{ 'Find events near you'|t }}</p>

        <p class="hero__description">
          {{ 'Discover local events, workshops, gigs, and community gatherings â€” or create your own in minutes.'|t }}
        </p>
      </div>

      <div class="hero__search">
        {{ drupal_block('myeventlane_search_block') }}
      </div>

      {% if popular_tags %}
        <div class="hero__tags">
          <span class="hero__tags-label">{{ 'Popular tags:'|t }}</span>
          {% for term in popular_tags %}
            <a href="{{ term.url }}" class="hero__tag">{{ term.name }}</a>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="hero__visual" aria-hidden="true">
      <div class="hero__visual-inner"></div>
    </div>
  </div>
</section>
