{#
/**
 * @file
 * MEL Card Carousel (Swiper)
 *
 * Variables:
 * - items: Rendered event cards (already themed)
 * - carousel_id: Unique ID string
 */
#}

<div class="mel-card-carousel swiper" id="{{ carousel_id }}">
  <div class="swiper-wrapper">
    {% for item in items %}
      <div class="swiper-slide">
        {{ item }}
      </div>
    {% endfor %}
  </div>

  <button class="swiper-button-prev" aria-label="Previous events"></button>
  <button class="swiper-button-next" aria-label="Next events"></button>
</div>
