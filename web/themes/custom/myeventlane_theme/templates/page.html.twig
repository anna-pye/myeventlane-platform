{#
/**
 * @file
 * Base page template for MyEventLane Theme.
 *
 * IMPORTANT:
 * - This template defines blocks for page variants (front, search, event, etc).
 * - Do not inline script/style tags. Attach assets via libraries only.
 *
 * Regions are rendered structurally; blocks/layout builder control the content.
 */
#}

{% set page_wrapper_attributes = create_attribute().addClass('mel-page') %}

<div{{ page_wrapper_attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {# Site header: compact global header (desktop + mobile) #}
  {{ site_header }}

  {# Optional hero region used by some pages. #}
  {% block hero %}
    {% if page.hero %}
      <div class="mel-region-hero">
        {{ page.hero }}
      </div>
    {% endif %}
  {% endblock %}

  {# Optional pre-content region. #}
  {% if page.pre_content %}
    <div class="mel-region-pre-content">
      <div class="mel-container">
        {{ page.pre_content }}
      </div>
    </div>
  {% endif %}

  <main id="main-content" class="mel-main" role="main">
    {% block content %}
      {{ page.content }}
    {% endblock %}
  </main>

  {# Optional below-content region. #}
  {% if page.below_content %}
    <div class="mel-region-below-content">
      <div class="mel-container">
        {{ page.below_content }}
      </div>
    </div>
  {% endif %}

  {% include '@myeventlane_theme/includes/footer.html.twig' %}
</div>
