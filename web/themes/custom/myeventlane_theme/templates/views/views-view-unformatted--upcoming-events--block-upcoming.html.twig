{#
/**
 * @file
 * Views unformatted template for homepage "Discover events" Sticker Wall.
 * Outputs cards directly without .mel-event-grid wrapper (sticker wall handles grid).
 */
#}

{% if rows %}
  {# Output cards directly - .mel-sticker-wall parent handles grid layout #}
  {% for row in rows %}
    {%
      set tilt_class = 'mel-tilt-' ~ ((loop.index0 % 3) + 1)
    %}
    <div class="mel-sticker-wall__item {{ tilt_class }}">
      {{- row.content -}}
    </div>
  {% endfor %}
{% endif %}
