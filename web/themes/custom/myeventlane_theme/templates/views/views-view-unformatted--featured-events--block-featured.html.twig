{#
/**
 * @file
 * Featured events carousel.
 * Horizontal scroll carousel with prev/next controls on desktop.
 */
#}

{% if rows %}
  <div class="mel-featured-carousel" aria-label="{{ 'Featured events'|t }}">
    <div class="mel-featured-carousel__container">
      <div class="mel-featured-carousel__track" role="list">
        {% for row in rows %}
          <div class="mel-featured-carousel__slide" role="listitem">
            {{ row.content }}
          </div>
        {% endfor %}
      </div>
    </div>
    
    <div class="mel-featured-carousel__controls">
      <button 
        type="button" 
        class="mel-featured-carousel__button mel-featured-carousel__button--prev" 
        aria-label="{{ 'Previous featured events'|t }}"
      >
        <span aria-hidden="true">‹</span>
      </button>
      <button 
        type="button" 
        class="mel-featured-carousel__button mel-featured-carousel__button--next" 
        aria-label="{{ 'Next featured events'|t }}"
      >
        <span aria-hidden="true">›</span>
      </button>
    </div>
  </div>
{% endif %}
