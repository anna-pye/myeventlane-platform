{#
  Event organiser section - Vendor card
  Displays vendor name and logo, links to public vendor profile
#}
{% if vendor and vendor_url %}
  <section class="mel-event-card mel-event-card--organiser">
    <h2 class="mel-event-card__title">{{ 'Organised by'|t }}</h2>
    <div class="mel-event-card__content">
      <a href="{{ vendor_url }}" class="event-vendor-card__link">
        {% if vendor_logo %}
          <div class="event-vendor-card__logo">
            {{ vendor_logo }}
          </div>
        {% endif %}
        <div class="event-vendor-card__name">{{ vendor_name }}</div>
      </a>
    </div>
  </section>
{% elseif mel_organiser_name %}
  {# Fallback to old organiser display if no vendor #}
  <section class="mel-event-card mel-event-card--organiser">
    <h2 class="mel-event-card__title">{{ 'Hosted by'|t }}</h2>
    <div class="mel-event-card__content">
      {% if mel_organiser_logo %}
        <div class="mel-organiser__logo">
          <img src="{{ mel_organiser_logo }}" alt="{{ mel_organiser_name }}" />
        </div>
      {% endif %}
      <div class="mel-organiser__name">{{ mel_organiser_name }}</div>
      <p class="mel-organiser__trust">{{ 'Verified organiser'|t }}</p>
    </div>
  </section>
{% endif %}
