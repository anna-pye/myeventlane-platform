{#
  Event CTA section.
  Display only. Single resolved CTA from controller/service (cta_type + event_cta).
  No logic in Twig.
#}
{% set cta = event_cta|default({ cta_type: 'none', label: '', url: null, disabled: true, helper: null }) %}
<div class="event-cta">
  {% if cta.label %}
    {% if cta.disabled %}
      <button class="button button--primary event-cta__button" disabled aria-disabled="true">
        {{ cta.label }}
      </button>
    {% elseif cta.url %}
      <a href="{{ cta.url }}" class="button button--primary event-cta__button">
        {{ cta.label }}
      </a>
    {% else %}
      <button class="button button--primary event-cta__button" disabled aria-disabled="true">
        {{ cta.label }}
      </button>
    {% endif %}
    {% if cta.helper %}
      <p class="event-cta__helper">{{ cta.helper }}</p>
    {% endif %}
  {% endif %}
</div>
