{#
  Event CTA (call-to-action) button.
  Display only. Single resolved CTA from service (cta_type + event_cta).
  No secondary CTA; mutual exclusivity (paid | rsvp | none).
#}
{% set cta = event_cta|default({ cta_type: 'none', label: '', url: null, disabled: true, helper: null }) %}
{% if cta.label %}
  {% if cta.disabled %}
    <button class="mel-btn mel-btn-primary" disabled aria-disabled="true">{{ cta.label }}</button>
  {% elseif cta.url %}
    <a class="mel-btn mel-btn-primary" href="{{ cta.url }}">{{ cta.label }}</a>
  {% else %}
    <button class="mel-btn mel-btn-primary" disabled aria-disabled="true">{{ cta.label }}</button>
  {% endif %}
  {% if cta.helper %}
    <p class="mel-helper">{{ cta.helper }}</p>
  {% endif %}
{% endif %}
