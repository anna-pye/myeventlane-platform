{#
  Vendor public profile - simplified.
  Only shows: Name, Logo, Bio, and Events.
#}

<article{{ attributes.addClass('vendor-profile') }}>
  <header class="vendor-profile__header">
    {% if content.field_vendor_logo or content.field_logo_image %}
      <div class="vendor-profile__logo">
        {% if content.field_vendor_logo %}
          {{ content.field_vendor_logo }}
        {% elseif content.field_logo_image %}
          {{ content.field_logo_image }}
        {% endif %}
      </div>
    {% endif %}

    <div class="vendor-profile__title">
      <h1{{ title_attributes }} class="vendor-profile__name">{{ entity.label }}</h1>
    </div>
  </header>

  {% if content.field_vendor_bio %}
    <div class="vendor-profile__bio">
      {{ content.field_vendor_bio }}
    </div>
  {% endif %}

  <section class="vendor-profile__events" aria-labelledby="vendor-events-heading">
    <h2 id="vendor-events-heading">{{ 'Upcoming events'|t }}</h2>

    {#
      Events listing MUST be provided by a placed Views block (Layout Builder or
      block placement) for cache safety and to avoid hard Twig dependencies.
      This template intentionally does not embed blocks programmatically.
    #}
    {% if content.field_vendor_events is defined %}
      {{ content.field_vendor_events }}
    {% else %}
      <div class="vendor-profile__events-placeholder">
        {{ 'Events will appear here.'|t }}
      </div>
    {% endif %}
  </section>
</article>
