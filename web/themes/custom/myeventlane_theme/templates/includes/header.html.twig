{#
/**
 * @file
 * Main site header.
 * Always renders structural markup for debugging and CSS recovery.
 */
#}

<header class="mel-site-header mel-site-header--main" role="banner">
  <div class="mel-site-header__inner mel-header-inner mel-container">

    <div class="mel-header-left mel-header__left">
      {{ page.header_left }}
    </div>

    <div class="mel-header__center">
      {{ page.header_center }}
    </div>

    <div class="mel-header__right">
      {{ page.header_right }}

      {# Fallback: theme preprocess builds page.header.cart_block if not placed. #}
      {% if page.header is defined and page.header.cart_block is defined %}
        <div class="mel-header-cart">
          {{ page.header.cart_block }}
        </div>
      {% endif %}
    </div>

  </div>

  {% if page.mobile_nav %}
    <div class="mel-site-header__mobile-nav mel-container">
      {{ page.mobile_nav }}
    </div>
  {% endif %}
</header>
