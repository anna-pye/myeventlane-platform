{#
/**
 * @component Mobile Drawer
 *
 * Variables:
 * - drawer_menu (primary links)
 * - drawer_organiser (organiser links/context)
 */
#}

<details class="mobile-drawer">
  <summary class="mobile-drawer__toggle" aria-label="Open menu">
    <span class="mobile-drawer__icon" aria-hidden="true">â˜°</span>
    <span class="mobile-drawer__label">Menu</span>
  </summary>

  <div class="mobile-drawer__panel" role="dialog" aria-label="Site menu">
    <div class="mobile-drawer__section">
      {{ drawer_menu }}
    </div>

    {% if drawer_organiser %}
      <div class="mobile-drawer__divider" aria-hidden="true"></div>
      <div class="mobile-drawer__section">
        {{ drawer_organiser }}
      </div>
    {% endif %}

    <div class="mobile-drawer__divider" aria-hidden="true"></div>
    <div class="mobile-drawer__section mobile-drawer__section--cta">
      <a href="/create-event" class="mobile-drawer__create-event">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        {{ 'Create a New Event'|t }}
      </a>
    </div>
  </div>
</details>
