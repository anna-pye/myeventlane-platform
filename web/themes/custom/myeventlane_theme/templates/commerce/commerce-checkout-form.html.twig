{#
/**
 * @file
 * Safe override for Commerce checkout form.
 *
 * Goals:
 * - Zero Twig syntax errors
 * - No inline PHP-style logic
 * - Compatible with Drupal 10/11 + Commerce
 * - MEL styling hook points only
 */
#}

<div class="mel-checkout">

  {% if title %}
    <h1 class="mel-checkout__title">{{ title }}</h1>
  {% endif %}

  {% if form.progress %}
    <div class="mel-checkout__progress">
      {{ form.progress }}
    </div>
  {% endif %}

  <div class="mel-checkout__layout">

    <div class="mel-checkout__main">
      {{ form|without('progress', 'sidebar', 'actions') }}
    </div>

    {% if form.sidebar %}
      <aside class="mel-checkout__sidebar">
        {{ form.sidebar }}
      </aside>
    {% endif %}

  </div>

  {% if form.actions %}
    <div class="mel-checkout__actions">
      {{ form.actions }}
    </div>
  {% endif %}

</div>