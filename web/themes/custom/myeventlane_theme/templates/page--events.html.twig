{#
/**
 * @file
 * Theme override for the /events page.
 *
 * Uses the MEL listing header (search + category pills) and renders the events
 * view output below.
 */
#}

<div class="mel-page mel-page--events">

  {# Skip to main content #}
  <a href="#main-content" class="visually-hidden focusable skip-link">
    {{ 'Skip to main content'|t }}
  </a>

  {# ==================== HEADER ==================== #}
  <div class="mel-region-header">
    {% include '@myeventlane_theme/includes/header.html.twig' %}
  </div>

  {# ==================== MAIN CONTENT ==================== #}
  <main id="main-content" class="mel-main">
    <div class="mel-container">
      <div class="mel-content">
        {% include '@myeventlane_theme/components/mel-page-header.html.twig' with {
          title: 'Events'|t,
          show_search: true,
          show_categories: true,
          categories: mel_header_categories|default([])
        } %}

        {# Featured / All Events are provided by the attached Views output. #}
        <section class="mel-section mel-featured-events">
          <div class="mel-section-header">
            <h2 class="mel-section-title">{{ 'Upcoming Events'|t }}</h2>
            <a href="/create-event" class="mel-section-link">
              {{ 'Create your event â†’'|t }}
            </a>
          </div>

          {{ page.content }}
        </section>

        {# CTA Banner #}
        <section class="mel-cta-banner">
          <h2 class="mel-cta-title">{{ 'Ready to host your event?'|t }}</h2>
          <p class="mel-cta-text">
            {{ 'Create and manage events with ease. Free for free events!'|t }}
          </p>
          <div class="mel-cta-actions">
            <a href="/create-event" class="mel-btn mel-btn-accent mel-btn-lg">
              {{ 'Get Started Free'|t }}
            </a>
            <a href="/vendors" class="mel-btn mel-btn-ghost mel-btn-lg" style="color: white; border-color: rgba(255,255,255,0.5);">
              {{ 'For Vendors'|t }}
            </a>
          </div>
        </section>

      </div>
    </div>
  </main>

  {# ==================== FOOTER ==================== #}
  <div class="mel-region-footer">
    {% include '@myeventlane_theme/includes/footer.html.twig' %}
  </div>

</div>
