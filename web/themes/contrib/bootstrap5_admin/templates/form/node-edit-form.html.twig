{#
/**
 * @file
 * Theme override for a node edit form.
 *
 * Two column template for the node add/edit form.
 *
 * This template will be used when a node edit form specifies 'node_edit_form'
 * as its #theme callback. Otherwise, by default, node add/edit forms will be
 * themed by form.html.twig.
 *
 * Available variables:
 * - form: The node add/edit form.
 *
 * @see bootstrap5_admin_form_node_form_alter()
 */
#}
{% extends '@bootstrap5_admin/form/form-two-columns.html.twig' %}
{% block main %}
  <div class="bg-body-tertiary sticky-top text-end p-2 rounded">
    <div class="d-inline-block">
      {{ form.footer }}
    </div>
    <div class="d-inline-block">
      {{ form.actions }}
    </div>
    <button class="btn btn-outline-dark ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSecondary" aria-controls="offcanvasSecondary" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="{{ 'Show settings'|trans }}" title="{{ 'Show settings'|trans }}">
      <i class="bi bi-layout-text-sidebar"></i>
    </button>
  </div>
  {{ form|without('advanced', 'footer', 'actions') }}
{% endblock %}

{% block secondary %}
  {{ form.advanced }}
{% endblock %}
